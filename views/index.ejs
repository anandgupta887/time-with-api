<body>
  

  <main role="main">

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <div class="container">
        <h1 class="display-3">Dynamic Time</h1>
        <p>It is assignment provided by Cloud Counselage to there interns to test there capabilities.</p>
      </div>
    </div>

    <div class="container">
      <!-- Example row of columns -->
      <div class="row">
        <div id="display" class="time-displays columns-lg-6">

        </div>
      </div>

      <hr>

    </div> <!-- /container -->

  </main>
  <script type="text/javascript">
    setInterval(function() {
      function time() {
        const day = new Date();
        const time = day.toLocaleString();

        var date = day.getDate();
        var month = day.getMonth() + 1;
        var year = day.getFullYear();
        var hour = day.getHours();
        var minutes = day.getMinutes();
        var seconds = day.getSeconds();

        var datetime = date + "/" + month + "/" + year + " " + hour + ":" + minutes + ":" + seconds;
        return datetime;
      };
      currentTime = time();
      document.getElementById("display").innerHTML = currentTime;
    }, 1000);
  </script>
